<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/bg_buttons</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="bg_buttons" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/sel_btn</item>
        <item name="android:textColor">@color/button_round_text_color</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="TextMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily" tools:targetApi="16">@string/font_family_medium</item>
    </style>

    <style name="TextRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily" tools:targetApi="16">@string/font_family_regular</item>
    </style>

    <style name="TextMedium.Headline">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextMedium.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextMedium.MapInfo">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="TextMedium.MapInfo.Value">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextRegular.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextMedium.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextRegular.Caption2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

</resources>
